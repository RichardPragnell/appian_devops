    <versionUuid>_a-0000e906-146c-8000-e9f7-01ef9001ef90_162093</versionUuid>
    <rule>
        <name>VAC_COM_isValidUser</name>
        <uuid>_a-0000e906-146c-8000-e9f7-01ef9001ef90_126646</uuid>
        <description>Checks if a given text is an existing active user</description>
        <parentUuid>dbecc6ad-7fdc-4080-af31-97861632850a</parentUuid>
        <visibility>
            <advertise>false</advertise>
            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>not(or(
  a!isNullOrEmpty(ri!user),
  not(isusernametaken(ri!user)),
  and(ri!mustBeActive = true, user(ri!user, "status") = 0) /* Is not deactivated */
))</definition>
        <namedTypedValue>
            <name>user</name>
            <type>
                <name>string</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
            <value/>
        </namedTypedValue>
        <namedTypedValue>
            <name>mustBeActive</name>
            <type>
                <name>boolean</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
        </namedTypedValue>
        <preferredEditor>legacy</preferredEditor>
        <offlineEnabled>false</offlineEnabled>
    </rule>
